/* Fonts */
.serif
{
  font-family: 'Droid Serif', Georgia, Times, serif;
}
 
html
{
  font-family: 'Droid Sans', Helvetica, Arial, sans-serif;
}

h1
{
  font-size: 200%;
  line-height: 150%;
  margin-top: 1em;
  margin-left: 1em;
  margin-right: 1em;
}

h2
{
  font-size: 150%;
  line-height: 125%;
  margin-top: 1em;
  margin-left: 1em;
  margin-right: 1em;
}

p, #footer
{
  font-size: 100%;
  line-height: 150%;
}

#footer
{
  color: #FFF;
}

.center
{
  text-align: center;
}

/* Page background (cream dust) */
html
{
  background-image: url(<%= asset_path 'cream_dust.png' %>);
}

/* Header */
#headerwrapper
{
  background: #85a440 url(<%= asset_path 'header-back.png' %>) repeat-x;
  box-shadow: 0px 5px 5px rgba(1, 1, 1, 0.15);
  
  /* Make box shadow appear above video-back, but below video */
  position: relative;
  z-index: 1;
}

/* Header */
#footerwrapper
{
  background: #85a440 url(<%= asset_path 'footer-back.png' %>) repeat-x;
  background-position: center;
  box-shadow: 0px -3px 3px #AAA;
}

#homevideo
{
  /* Make headerwrapper box shadow appear above video-back, but below video */
  position: relative;
  z-index: 1;
}

#homevideo-description h2
{
  margin: 0 !important;
  margin-bottom: 1em !important;
}

/* Video list item border/background */
.video-list  > .item 
{
  padding: 1.5%;
  border: solid 1px #CCC;
  background-image: url(<%= asset_path 'striped_lens.png' %>);
  text-decoration: none;
  color: #000;
}

/* Border around videos in lists */
.video-list  > .item:hover
{
  background-image: url(<%= asset_path 'striped_lens_dimmed.png' %>);
}

/* Duration alignment */
.video-list .item .thumbnail
{
  position: relative;
}

.video-list .item .thumbnail .duration
{
  position: absolute;
  right: 1em;
  bottom: 0;
  color: #FFF;
  text-decoration: none;
  padding: 0.5em;
  background: rgba(0, 0, 0, 0.5);
}

/* Navigation */
.header-nav ul
{
  overflow: hidden;
  border: solid 1px #ccc;
  background-color: #FFF;
  border-radius: 4px;
  box-shadow: 3px 3px 10px #888;
}

.header-nav .top
{
  padding-bottom: 0.5em;
  color: #FFF;
  font-size: 130%;
}

.header-nav a
{
  padding: 1em;
  display: block;
  text-decoration: none;
  font-size: 120%;
}

.header-nav a:hover
{
  color: #fb6716;
  text-decoration: none;
}

.header-nav a:active
{
  color: #a73;
  text-decoration: none;
}

/* Search box */
#search input 
{
  font-size: 120%;
  border: solid 1px #a8c764;
  box-shadow: 3px 3px 3px #4e6c1c;
}

/* Footer links */
#footer #links a
{
  color: #FFF;
  text-decoration: none;
}

#footer #links a:hover
{
  color: #fb6716;
  text-decoration: none;
}

#footer #links a:active
{
  color: #a73;
  text-decoration: none;
}
