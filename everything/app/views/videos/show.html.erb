<% provide(:title, @video.title) %>

<div class="center">
  <div id="video">
    <!-- Video title -->
    <h1><%= @video.title %></h1>
    <br>

    <!-- Video player -->
    <iframe id="ytplayer" type="text/html"
            width="640" height="390"
            src="http://www.youtube.com/embed/<%= @video.video_id %>"
            frameborder="0"
            allowfullscreen="true"></iframe>
    <br>

    <!-- Video description -->
    <p><%= replace_linebreaks_br(@video.description) %></p>
  </div>
</div>

<br>

<% if user_signed_in? %>

  <%= link_to "edit categories", edit_video_path(@video) %>

<% end %>
