<% provide(:title, "Add new category") %>

<h1>Add new <%= @cat_type %></h1>

<div class="center">

  <%= form_for @category do |f| %>

    <%= render 'shared/error_messages', object: @category %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.submit "Create #{@cat_type}" %>

  <% end %>

</div>
