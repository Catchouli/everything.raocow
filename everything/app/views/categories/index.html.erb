<% provide(:title, "all #{@cat_type}") %>

<div id="wrapper">

  <div class="page-head">

    <h1>all <%= @cat_type %></h1>

    <% if user_signed_in? %>

      <%= link_to "add #{@cat_type}", send("new_#{@cat_type}_path") %>

    <% end %>

  </div>

  <%= render 'shared/list_of_links', objects: @categories, options: { info: [:name], thumbnails: true } %>

</div>
